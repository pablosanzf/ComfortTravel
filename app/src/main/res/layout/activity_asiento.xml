<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:layout_columnSpan="2"
    android:layout_row="3"
    android:layout_rowSpan="3"
    android:orientation="horizontal"
    tools:context=".AsientoActivity"
    tools:ignore="MergeRootFrame">


    <ImageView
        android:id="@+id/asiento"
        android:layout_width="192dp"
        android:layout_height="175dp"
        android:layout_column="0"
        android:layout_row="0"
        android:contentDescription="Seat image"
        android:src="@drawable/ic_airline_seat_recline_normal_primary_24dp" />

    <ImageView
        android:id="@+id/temperatura"
        android:layout_width="192dp"
        android:layout_height="175dp"
        android:layout_column="1"
        android:layout_row="0"
        android:contentDescription="temperature image"
        android:src="@drawable/temperature" />

    <ImageView
        android:id="@+id/linterna"
        android:layout_width="192dp"
        android:layout_height="175dp"
        android:layout_column="0"
        android:layout_row="1"
        android:contentDescription="light image"
        android:src="@drawable/ic_highlight_primary_48dp" />

    <ImageView
        android:id="@+id/comida"
        android:layout_width="192dp"
        android:layout_height="175dp"
        android:layout_column="1"
        android:layout_row="1"
        android:contentDescription="food image"
        android:src="@drawable/food" />

    <ImageView
        android:id="@+id/localizacion"
        android:layout_width="192dp"
        android:layout_height="175dp"
        android:layout_column="0"
        android:layout_row="2"
        android:contentDescription="localizacion image"
        android:src="@drawable/ic_gps_fixed_primary_48dp" />

    <ImageView
        android:id="@+id/informacion"
        android:layout_width="192dp"
        android:layout_height="175dp"
        android:layout_column="1"
        android:layout_row="2"
        android:contentDescription="informacion image"
        android:src="@drawable/ic_info_outline_primary_48dp" />

</GridLayout>